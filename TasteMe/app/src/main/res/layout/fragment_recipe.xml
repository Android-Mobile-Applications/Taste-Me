<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.nitro.tasteme.fragments.RecipeFragment"
    android:id="@+id/recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="recipe_fragment"
    android:background="#ffffff"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recipe_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_4" />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muffin"
        android:padding="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/recipe_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="Cook the best muffin hahahahahahahahahhhhhahahahahhahahhahhahahhahahhhhhhhhhhhhh"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients:"
        android:padding="20dp"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    
</LinearLayout>
