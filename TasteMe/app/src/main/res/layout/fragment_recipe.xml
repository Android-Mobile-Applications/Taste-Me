<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.nitro.tasteme.fragments.RecipeFragment"
        android:id="@+id/llRecipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="recipe_fragment"
        android:background="#ffffff"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivRecipeImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/sample_4"
            android:layout_weight="0.92"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvRecipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvRecipeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients:"
            android:padding="20dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/llRecipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:showDividers="end">

        </LinearLayout>

        <Button
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to shopping cart"
            android:textStyle="bold"
            android:background="#F43B03"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>
